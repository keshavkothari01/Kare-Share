<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- About Us Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information about KareShare, mission statement, partners, and sponsors."
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact and Support"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For any issues or queries, please fill out our contact form."
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/contactFormInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your message here"
                android:backgroundTint="#3F51B5"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnSubmitContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="#3F51B5"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support Contact Details:\nEmail: support@kareshare.com\nPhone: +1234567890"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>